<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <corners
        android:radius="50dp"
        />

    <item>
        <shape android:shape="oval">
            <stroke android:color="@color/blue_sea"
                android:width="3dp"/>
            <solid android:color="@color/blue_sea"/>
            <size
                android:width="10dp"
                android:height="10dp"/>
        </shape>
    </item>

    <item>
        <shape android:shape="oval">
            <stroke android:color="@color/white"
                android:width="2dp"/>
            <solid android:color="@color/transparent"/>
            <size
                android:width="10dp"
                android:height="10dp"/>
        </shape>
    </item>

    <item>
        <shape android:shape="oval">
            <stroke android:color="@color/blue_sea"
                android:width="1dp"/>
            <solid android:color="@color/transparent"/>
            <size
                android:width="10dp"
                android:height="10dp"/>
        </shape>
    </item>

</layer-list>