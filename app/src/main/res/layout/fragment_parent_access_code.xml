<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_background"
    android:clickable="true"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/img_left_arrow_white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="40dp"
            android:layout_height="40dp"/>

        <TextView
            android:id="@+id/tvAccessTitle"
            android:text="@string/create_access"
            android:textSize="23sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/ivBack"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:id="@+id/llDots"
            app:layout_constraintTop_toBottomOf="@+id/tvAccessTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="50dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ivDot1"
                android:background="@drawable/view_oval_rectangle_dots_active"
                android:layout_width="20dp"
                android:layout_height="20dp"/>

            <ImageView
                android:id="@+id/ivDot2"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/view_oval_rectangle_dots_active"
                android:layout_width="20dp"
                android:layout_height="20dp"/>

            <ImageView
                android:id="@+id/ivDot3"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/view_oval_rectangle_dots_active"
                android:layout_width="20dp"
                android:layout_height="20dp"/>

            <ImageView
                android:id="@+id/ivDot4"
                android:background="@drawable/view_oval_rectangle_dots_active"
                android:layout_width="20dp"
                android:layout_height="20dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll123"
            app:layout_constraintTop_toBottomOf="@+id/llDots"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="50dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvNum1"
                android:background="@drawable/btn_pressed_code_access"
                android:gravity="center"
                android:text="1"
                android:textSize="23sp"
                android:textColor="@color/white"
                android:layout_width="80dp"
                android:layout_height="80dp"/>

            <TextView
                android:id="@+id/tvNum2"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/btn_pressed_code_access"
                android:gravity="center"
                android:text="2"
                android:textSize="23sp"
                android:textColor="@color/white"
                android:layout_width="80dp"
                android:layout_height="80dp"/>

            <TextView
                android:id="@+id/tvNum3"
                android:background="@drawable/btn_pressed_code_access"
                android:gravity="center"
                android:text="3"
                android:textSize="23sp"
                android:textColor="@color/white"
                android:layout_width="80dp"
                android:layout_height="80dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll456"
            app:layout_constraintTop_toBottomOf="@+id/ll123"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvNum4"
                android:background="@drawable/btn_pressed_code_access"
                android:gravity="center"
                android:text="4"
                android:textSize="23sp"
                android:textColor="@color/white"
                android:layout_width="80dp"
                android:layout_height="80dp"/>

            <TextView
                android:id="@+id/tvNum5"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/btn_pressed_code_access"
                android:gravity="center"
                android:text="5"
                android:textSize="23sp"
                android:textColor="@color/white"
                android:layout_width="80dp"
                android:layout_height="80dp"/>

            <TextView
                android:id="@+id/tvNum6"
                android:background="@drawable/btn_pressed_code_access"
                android:gravity="center"
                android:text="6"
                android:textSize="23sp"
                android:textColor="@color/white"
                android:layout_width="80dp"
                android:layout_height="80dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll789"
            app:layout_constraintTop_toBottomOf="@+id/ll456"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvNum7"
                android:background="@drawable/btn_pressed_code_access"
                android:gravity="center"
                android:text="7"
                android:textSize="23sp"
                android:textColor="@color/white"
                android:layout_width="80dp"
                android:layout_height="80dp"/>

            <TextView
                android:id="@+id/tvNum8"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/btn_pressed_code_access"
                android:gravity="center"
                android:text="8"
                android:textSize="23sp"
                android:textColor="@color/white"
                android:layout_width="80dp"
                android:layout_height="80dp"/>

            <TextView
                android:id="@+id/tvNum9"
                android:background="@drawable/btn_pressed_code_access"
                android:gravity="center"
                android:text="9"
                android:textSize="23sp"
                android:textColor="@color/white"
                android:layout_width="80dp"
                android:layout_height="80dp"/>

        </LinearLayout>


        <TextView
            android:id="@+id/tvNum0"
            app:layout_constraintTop_toBottomOf="@+id/ll789"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/btn_pressed_code_access"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="0"
            android:textSize="23sp"
            android:textColor="@color/white"
            android:layout_width="80dp"
            android:layout_height="80dp"/>



    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>