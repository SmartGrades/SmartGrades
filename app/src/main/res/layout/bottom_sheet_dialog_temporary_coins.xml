<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:clickable="true"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvDescription"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="@string/Accrual_of_Time_Coins"
        android:textColor="@color/purple_background"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:id="@+id/rvGradesList"
        android:layout_width="match_parent"
        android:layout_height="80dp"/>

    <RelativeLayout
        android:id="@+id/rlCause"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:visibility="gone">

        <Button
            android:id="@+id/BTN1"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="false"
            android:layout_gravity="top|left"
            android:layout_marginBottom="10dp"
            android:background="@drawable/btn_background_white_rectangle"
            android:gravity="center"
            android:text="@string/Child_fine" />

        <Button
            android:id="@+id/BTN2"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="false"
            android:layout_marginStart="43dp"
            android:layout_marginLeft="43dp"
            android:layout_marginBottom="15dp"
            android:layout_toEndOf="@+id/BTN1"
            android:layout_toRightOf="@+id/BTN1"
            android:background="@drawable/btn_background_white_rectangle"
            android:gravity="center"
            android:text="@string/Taking_off_by_a_child" />

    </RelativeLayout>

</LinearLayout>