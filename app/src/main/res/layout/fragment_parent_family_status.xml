<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:background="@color/purple_background">



        <ImageView
            android:id="@+id/ivBack"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/img_left_arrow_white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="40dp"
            android:layout_height="40dp"/>

        <TextView
            android:id="@+id/tvFamilyStatusTitle"
            android:text="@string/enter_family_status"
            android:textSize="23sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/ivBack"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


    <LinearLayout
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/tvYourStatusForChild"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:gravity="left"
            android:text="@string/your_status_for_child"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <CheckBox
            android:layout_marginTop="10dp"
            android:button="@drawable/checkbox_selector_family_member"
            android:id="@+id/cbFather"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:paddingLeft="10dp"
            android:gravity="left|center_vertical"
            android:text="@string/father"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <CheckBox
            android:layout_marginTop="10dp"
            android:button="@drawable/checkbox_selector_family_member"
            android:id="@+id/cbMother"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:gravity="left"
            android:text="@string/mother"
            android:paddingLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <CheckBox
            android:layout_marginTop="10dp"
            android:button="@drawable/checkbox_selector_family_member"
            android:id="@+id/cbAnotherFamilyMember"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:gravity="left"
            android:paddingLeft="10dp"
            android:text="@string/another_family_member"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


    </LinearLayout>



        <ImageView
            android:id="@+id/ivNext"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/img_right_arrow_uncheck_green"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="50dp"
            android:layout_height="50dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>