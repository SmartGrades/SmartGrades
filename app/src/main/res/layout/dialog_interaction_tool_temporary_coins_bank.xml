<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        android:contentInsetStart="0dp"
        android:contentInsetLeft="0dp"
        app:contentInsetStartWithNavigation= "0dp"

        android:id="@+id/toolbar"
        android:background="@color/purple_background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_marginLeft="10dp"
                android:id="@+id/ivBack"
                android:src="@drawable/img_left_arrow_white"
                android:layout_gravity="left|center_vertical"
                android:layout_width="40dp"
                android:layout_height="40dp"/>

            <TextView
                android:text="Банк"
                android:id="@+id/tvTitle"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </FrameLayout>

    </androidx.appcompat.widget.Toolbar>


    <FrameLayout
        android:layout_marginTop="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/civAvatar"
                android:layout_gravity="left|center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_width="40dp"
                android:layout_height="40dp"/>

            <TextView
                android:id="@+id/tvLogin"
                android:textSize="13sp"
                android:textColor="@color/black"
                android:gravity="left|center_vertical"
                android:layout_marginLeft="50dp"
                android:layout_gravity="left|center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </FrameLayout>

        <View
            android:layout_marginTop="50dp"
            android:background="@color/blue_specter"
            android:layout_width="match_parent"
            android:layout_height="5dp"/>


        <!-- android:visibility="gone" -->
        <LinearLayout
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="55dp"
            android:orientation="vertical"
            android:id="@+id/frame1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:textSize="10sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:gravity="center"
                android:text="У ребенка нет действующих депозитов в Банке."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


            <TextView
                android:textSize="10sp"
                android:textColor="@color/gray_dark_sheet"
                android:gravity="left|center_vertical"
                android:text="Посоветуйте ребенку не тратить все Временные монеты,
а вкладывать их в Банк. Таким образом, ребенок будет
формировать в себе привычку финансовой грамотности."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


            <TextView
                android:layout_marginTop="20dp"
                android:layout_marginBottom="5dp"
                android:textSize="10sp"
                android:textColor="@color/black"
                android:gravity="center"
                android:text="Существует 2 вида депозита:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>



            <TextView
                android:layout_marginTop="5dp"
                android:textSize="10sp"
                android:textColor="@color/black"
                android:gravity="left"
                android:text="1) 20-дневный."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


            <TextView
                android:layout_marginLeft="10dp"
                android:textSize="10sp"
                android:textColor="@color/gray_default"
                android:gravity="left|center_vertical"
                android:text="Ребенок через 20 дней получит в 2 раза больше монет
    от вложенного им количества."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


            <TextView
                android:layout_marginTop="5dp"
                android:textSize="10sp"
                android:textColor="@color/black"
                android:gravity="left"
                android:text="2) 45-дневный."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginLeft="10dp"
                android:textSize="10sp"
                android:textColor="@color/gray_default"
                android:gravity="left|center_vertical"
                android:text="Ребенок через 45 дней получит в 4 раза больше монет
    от вложенного им количества."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


            <TextView
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:textSize="10sp"
                android:textColor="@color/black"
                android:gravity="center"
                android:text="Депозиты открываются Ребенком в собственном аккаунте."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>


        <!-- android:visibility="gone" -->
        <ScrollView
            android:visibility="gone"
            android:layout_marginTop="55dp"
            android:id="@+id/frame2"
            android:fillViewport="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="55dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <TextView
                    android:textSize="10sp"
                    android:textColor="@color/gray_metal"
                    android:gravity="left|center_vertical"
                    android:text="Советуйте ребенку не тратить все Временные монеты,
а вкладывать их в Банк. Таким образом, ребенок будет
формировать в себе привычку финансовой грамотности."
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>


                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="5dp"
                    android:textSize="10sp"
                    android:textColor="@color/gray_metal"
                    android:gravity="center"
                    android:text="Существует 2 вида депозита:"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>



                <TextView
                    android:layout_marginTop="5dp"
                    android:textSize="10sp"
                    android:textColor="@color/gray_metal"
                    android:gravity="left"
                    android:text="1) 20-дневный."
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>


                <TextView
                    android:layout_marginLeft="10dp"
                    android:textSize="10sp"
                    android:textColor="@color/gray_metal"
                    android:gravity="left|center_vertical"
                    android:text="Ребенок через 20 дней получит в 2 раза больше монет
    от вложенного им количества."
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>


                <TextView
                    android:layout_marginTop="5dp"
                    android:textSize="10sp"
                    android:textColor="@color/gray_metal"
                    android:gravity="left"
                    android:text="2) 45-дневный."
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_marginLeft="10dp"
                    android:textSize="10sp"
                    android:textColor="@color/gray_metal"
                    android:gravity="left|center_vertical"
                    android:text="Ребенок через 45 дней получит в 4 раза больше монет
    от вложенного им количества."
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>


                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:textSize="10sp"
                    android:textColor="@color/gray_metal"
                    android:gravity="center"
                    android:text="Депозиты открываются Ребенком в собственном аккаунте."
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>



        </ScrollView>



    </FrameLayout>



</FrameLayout>