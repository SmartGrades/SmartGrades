<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/tvDescription"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:text="Значения Умных оценок"
        android:textColor="@color/purple_background"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:id="@+id/llTitle"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/tvDescription"
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:gravity="center"
            android:text="Ментор начисляет \n Балл"
            android:textSize="13sp"
            android:textColor="@color/gray_default"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:gravity="center"
            android:text="Ребенок получает \n Временные монеты"
            android:textSize="13sp"
            android:textColor="@color/gray_default"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/llTitle"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:layout_marginTop="3dp"
            android:background="@color/gray_default"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <FrameLayout
            android:id="@+id/flChild"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textStyle="bold"
                android:layout_marginLeft="5dp"
                android:layout_gravity="left|center_vertical"
                android:textSize="21sp"
                android:text="2"
                android:textColor="@color/gray_default"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:id="@+id/ll2"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="5dp"
                android:layout_gravity="right|center_vertical"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv2TimeNumb"
                    android:text="0:00ч"
                    android:textSize="17sp"
                    android:textColor="@color/blue_sea"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </FrameLayout>

        <View
            android:layout_marginTop="3dp"
            android:background="@color/gray_default"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <FrameLayout
            android:id="@+id/flMentor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textStyle="bold"
                android:layout_marginLeft="5dp"
                android:layout_gravity="left|center_vertical"
                android:textSize="21sp"
                android:text="3"
                android:textColor="@color/gray_default"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:id="@+id/ll3"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="5dp"
                android:layout_gravity="right|center_vertical"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv3TimeNumb"
                    android:text="0:00ч"
                    android:textColor="@color/blue_sea"
                    android:textSize="17sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </FrameLayout>

        <View
            android:layout_marginTop="3dp"
            android:background="@color/gray_default"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <FrameLayout
            android:id="@+id/fl4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textStyle="bold"
                android:layout_marginLeft="5dp"
                android:layout_gravity="left|center_vertical"
                android:textSize="21sp"
                android:text="4"
                android:textColor="@color/gray_default"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:id="@+id/ll4"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="5dp"
                android:layout_gravity="right|center_vertical"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv4TimeNumb"
                    android:text="0:00ч"
                    android:textColor="@color/blue_sea"
                    android:textSize="17sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </FrameLayout>

        <View
            android:layout_marginTop="3dp"
            android:background="@color/gray_default"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <FrameLayout
            android:id="@+id/fl5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textStyle="bold"
                android:layout_marginLeft="5dp"
                android:layout_gravity="left|center_vertical"
                android:textSize="21sp"
                android:text="5"
                android:textColor="@color/gray_default"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:id="@+id/ll5"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="5dp"
                android:layout_gravity="right|center_vertical"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv5TimeNumb"
                    android:text="0:00ч"
                    android:textColor="@color/blue_sea"
                    android:textSize="17sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </FrameLayout>

        <View
            android:layout_marginTop="3dp"
            android:background="@color/gray_default"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <FrameLayout
            android:id="@+id/fl5p"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textStyle="bold"
                android:layout_marginLeft="5dp"
                android:layout_gravity="left|center_vertical"
                android:textSize="21sp"
                android:text="5+"
                android:textColor="@color/gray_default"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:id="@+id/ll5p"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="5dp"
                android:layout_gravity="right|center_vertical"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv5pTimeNumb"
                    android:text="0:00ч"
                    android:textColor="@color/blue_sea"
                    android:textSize="17sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </FrameLayout>

        <View
            android:layout_marginTop="3dp"
            android:background="@color/gray_default"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/flTimePicker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <TimePicker
            android:numbersTextColor="@color/purple_background"
            android:theme="@style/DefaultNumberPickerTheme"
            android:showDividers="none"
            android:layout_gravity="center"
            android:calendarViewShown="false"
            android:spinnersShown="true"
            android:timePickerMode="spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/timePicker" />

        <FrameLayout
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <View
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_gravity="top|center_horizontal"
                android:background="@color/gray_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>


            <ImageView
                android:src="@drawable/img_togle_plus_purple"
                android:layout_marginLeft="20dp"
                android:layout_gravity="left|center_vertical"
                android:id="@+id/ivPlusOrMinus"
                android:layout_width="50dp"
                android:layout_height="40dp"/>

            <TextView
                android:textSize="20sp"
                android:layout_marginLeft="80dp"
                android:id="@+id/tvPlusOrMinus"
                android:layout_gravity="left|center_vertical"
                android:text="+"
                android:textColor="@color/purple_background"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>



            <TextView
                android:layout_marginRight="50dp"
                android:layout_gravity="right|center_vertical"
                android:id="@+id/tvOk"
                android:text="OK"
                android:textColor="@color/blue_sea"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <View
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_gravity="bottom|center_horizontal"
                android:background="@color/gray_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>


        </FrameLayout>


    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/tvCancelOrOk"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Отмена"
            android:textColor="@color/blue_sea"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>